{
  "name": "Standard ML Compilation Manager",
  "scopeName": "source.sml-cm",
  "patterns": [
    { "include": "#lineComment" },
    { "include": "#blockComment" },
    { "include": "#preprocessorStart" },
    { "include": "#controlKeyword" },
    { "include": "#otherKeyword" }
  ],
  "repository": {
    "lineComment": {
      "name": "comment.line.sml-cm",
      "begin": ";",
      "end": "$"
    },
    "blockComment": {
      "name": "comment.block.sml-cm",
      "begin": "\\(\\*",
      "end": "\\*\\)",
      "patterns": [{ "include": "#blockComment" }]
    },
    "preprocessorStart": {
      "name": "keyword.control.directive.sml-cm",
      "match": "^#(elif|else|endif|error|if)"
    },
    "controlKeyword": {
      "name": "keyword.control.sml-cm",
      "match": "\\b(Alias|Group|Library|is)\\b"
    },
    "otherKeyword": {
      "name": "keyword.other.sml-cm",
      "match": "\\b(functor|funsig|signature|structure)\\b"
    }
  }
}
