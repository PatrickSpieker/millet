{
  "private": true,
  "name": "millet",
  "displayName": "Millet",
  "version": "0.1.4",
  "preview": true,
  "description": "Standard ML support for VS Code",
  "publisher": "azdavis",
  "author": "Ariel Davis <ariel.z.davis@icloud.com>",
  "repository": {
    "url": "https://github.com/azdavis/millet.git",
    "type": "git"
  },
  "license": "MIT",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "SML",
    "Standard ML",
    "language server"
  ],
  "main": "out/main.js",
  "scripts": {
    "build-base": "esbuild src/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --target=node16",
    "build-debug": "npm run build-base -- --sourcemap",
    "build-release": "npm run build-base -- --minify",
    "check": "tsc"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@types/vscode": "^1.67.0",
    "esbuild": "^0.14.42",
    "typescript": "^4.7.2",
    "vsce": "^2.8.0"
  },
  "engines": {
    "vscode": "^1.67.0"
  },
  "activationEvents": [
    "onLanguage:sml",
    "workspaceContains:**/*.{sml,sig,fun}"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Millet",
      "properties": {
        "millet.useLanguageServer": {
          "type": "boolean",
          "default": true,
          "description": "Use the language server."
        }
      }
    },
    "languages": [
      {
        "id": "sml",
        "extensions": [
          ".sml",
          ".sig",
          ".fun"
        ],
        "aliases": [
          "Standard ML"
        ],
        "configuration": "languages/sml/language-configuration.json"
      },
      {
        "id": "sml-cm",
        "extensions": [
          ".cm"
        ],
        "aliases": [
          "Standard ML Compilation Manager"
        ],
        "configuration": "languages/sml-cm/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sml",
        "scopeName": "source.sml",
        "path": "languages/sml/sml.tmLanguage.json"
      },
      {
        "language": "sml-cm",
        "scopeName": "source.sml-cm",
        "path": "languages/sml-cm/sml-cm.tmLanguage.json"
      }
    ]
  }
}
