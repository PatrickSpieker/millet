{
  "private": true,
  "name": "millet",
  "displayName": "Millet",
  "version": "0.3.1",
  "preview": true,
  "description": "Standard ML support for VS Code",
  "publisher": "azdavis",
  "icon": "icon.png",
  "author": "Ariel Davis <ariel.z.davis@icloud.com>",
  "repository": {
    "url": "https://github.com/azdavis/millet.git",
    "type": "git"
  },
  "license": "MIT",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "SML",
    "Standard ML",
    "language server"
  ],
  "main": "out/main.js",
  "scripts": {
    "build-base": "esbuild src/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --target=node16",
    "build-debug": "npm run build-base -- --sourcemap",
    "build-release": "npm run build-base -- --minify",
    "check": "tsc"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.68.1",
    "esbuild": "^0.14.48",
    "typescript": "^4.7.4",
    "vsce": "^2.9.2"
  },
  "engines": {
    "vscode": "^1.68.0"
  },
  "activationEvents": [
    "onLanguage:sml",
    "onLanguage:sml-nj-cm",
    "onLanguage:mlb",
    "workspaceContains:**/*.{sml,sig,fun,cm,mlb}"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Millet",
      "properties": {
        "millet.useLanguageServer": {
          "type": "boolean",
          "default": true,
          "description": "Use the language server."
        }
      }
    },
    "languages": [
      {
        "id": "sml",
        "extensions": [
          ".sml",
          ".sig",
          ".fun"
        ],
        "aliases": [
          "Standard ML"
        ],
        "configuration": "languages/sml/language-configuration.json"
      },
      {
        "id": "sml-nj-cm",
        "extensions": [
          ".cm"
        ],
        "aliases": [
          "SML/NJ Compilation Manager"
        ],
        "configuration": "languages/sml-nj-cm/language-configuration.json"
      },
      {
        "id": "mlb",
        "extensions": [
          ".mlb"
        ],
        "aliases": [
          "ML Basis"
        ],
        "configuration": "languages/mlb/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sml",
        "scopeName": "source.sml",
        "path": "languages/sml/syntax.json"
      },
      {
        "language": "sml-nj-cm",
        "scopeName": "source.sml-nj-cm",
        "path": "languages/sml-nj-cm/syntax.json"
      },
      {
        "language": "mlb",
        "scopeName": "source.mlb",
        "path": "languages/mlb/syntax.json"
      }
    ],
    "snippets": [
      {
        "language": "sml",
        "path": "languages/sml/snippets.json"
      },
      {
        "language": "sml-nj-cm",
        "path": "languages/sml-nj-cm/snippets.json"
      },
      {
        "language": "mlb",
        "path": "languages/mlb/snippets.json"
      }
    ]
  }
}
